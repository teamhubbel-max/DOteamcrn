# SEO Audit Tool - Пример переменных окружения
# Скопируйте этот файл в .env и настройте значения

# === FLASK НАСТРОЙКИ ===
# Секретный ключ Flask (ОБЯЗАТЕЛЬНО изменить в продакшене!)
# Сгенерируйте случайную строку: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=bc1qnz5nte682de96cap4slgu52lzk9k0653paj4kc

# Среда выполнения (development/production)
FLASK_ENV=production

# Режим отладки (False для продакшена)
DEBUG=False

# === НАСТРОЙКИ АНАЛИЗА ===
# Максимальное время анализа одного сайта (секунды)
MAX_ANALYSIS_TIME=30

# Максимальное количество URL для анализа
MAX_URLS_PER_ANALYSIS=10

# User-Agent для HTTP запросов
USER_AGENT=SEO-Audit-Tool/1.0

# === DIGITALOCEAN НАСТРОЙКИ ===
# Флаг работы в DO App Platform
DO_APP=true

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Временная зона
TZ=UTC

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальный размер ответа (байты)
MAX_RESPONSE_SIZE=10485760

# Таймаут для HTTP запросов (секунды)
REQUEST_TIMEOUT=10
